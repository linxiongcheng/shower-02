<view class="page-wrapper ">
  <view class="calendar-bar-wrapper js_calendar_wrapper">
    <view class="device-tabs calendar-bar">
      <view class="tabs-item js_pre_day">
        <picker id="school" mode="selector" range="{{schoolMap}}" value="{{school}}" range-key="text" bindchange="schoolSelectChange">
          <input id="school" class="input" name="school" type="text" placeholder="请选择学校" bindblur="bindblurSchool" value="{{schoolName}}" disabled="true" placeholder-class="phClass"/>
        </picker>
      </view>
      <view ontap="showCalendar" class="tabs-item js_show_calendar" style="-webkit-flex: 2; flex: 2;">筛选框</view>
      <view class="tabs-item js_next_day">
        <picker id="status" mode="selector" range="{{statusMap}}" value="{{status}}" range-key="text" bindchange="statusSelectChange">
          <input id="status" class="input" name="status" type="text" placeholder="请选择" bindblur="bindblurStatus" value="{{statusName}}" disabled="true" placeholder-class="phClass"/>
        </picker>
      </view>
    </view>
  </view>
  <view class="device-list js_device_list ">

    <block wx:for="{{listData}}" wx:key="k">
      <view class="device-list-item  ">
        <view class="device-time">{{item.dateStr}}</view>
        <view class="tobooking"> 使用 </view>
        <view class="detail">
          <view class="detail1">
            <view class="start">
              <text class="icon-circle s-icon1"></text>{{item.startstationname}}</view>
            <view class="end">
              <text class="icon-circle s-icon2"></text>{{item.arrivalstationname}}</view>
          </view>
          <view class="tags">
            <view>
              <text class="price">￥{{item.price / 100}}</text>
            </view>
            <view>
              <text class="countleft">{{item.cansellcountamount}}张</text>
            </view>
            <view>
              <text class="b-tags js_tags"></text>
            </view>
          </view>
        </view>
      </view>

    </block>

  </view>

</view>